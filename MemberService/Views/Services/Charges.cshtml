@{
    ViewBag.Title = "Charges";
}
<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">All charges</div>
        <div class="panel-body">
            <table class="display" id="chargeTable" width="100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Service</th>
                        <th>Currency</th>
                        <th>Amount</th>
                        <th>Is Paid</th>
                        <th>Email</th>
                        <th>Token</th>
                        <th>Remark</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('#chargeTable').DataTable( {
                "ajax": '@Url.Action("GetAllCharges","Services")',
                "columns": [
                    { "data": "Name" },
                    { "data": "Service" },
                    { "data": "Currency" },
                    { "data": "Amount" },
                    { "data": "Paid" },
                    { "data": "Email" },
                    { "data": "Token" },
                    { "data": "Description" },
                ],
            });
        })

    </script>
}